// ---------------------------
// +	Button settings
//		button-settings.styl
//
//		Declares some variables used within the library.
// ---------------------------


// Default
$btn-font-family = $font-family
$btn-font-size = 14px
$btn-font-weight = 500
$btn-font-color = $font-color
$btn-line-height = 1
$btn-bg-color = #eeecec
$btn-border-color = $btn-bg-color
$btn-border-radius = 2px

// Hover state
$btn-hover-font-color = darken( $btn-font-color, 10% )
$btn-hover-bg-color = darken( $btn-bg-color, 10% )
$btn-hover-border-color = $btn-hover-bg-color