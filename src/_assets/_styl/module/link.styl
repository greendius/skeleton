// ---------------------------
// +	Mute link
// ---------------------------
.link--muted
	nolinkanimate()
	color: $muted-color
	
	&:hover
		color: lighten( $font-color, 70% )
		
a[muted=muted]
	color: $muted-color
	
	&:hover
		color: lighten( $font-color, 70% )

