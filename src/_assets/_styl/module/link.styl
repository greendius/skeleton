a[target=_blank]
	relative()
	padding-right: 15px
	margin-right: 3px
	
	&::before
		faIcon()
		absolute: top 7px right 0
		content: $fa-var-external-link
		font-size: 10px
	
// ---------------------------
// +	Disable link
// ---------------------------
a[disabled=disabled]
	color: $muted-color
	cursor: not-allowed
	
	&:hover
		color: $muted-color
	