// ==============================================================
// ==	Accordion
// ==============================================================

.accordion
	//debug()
	list-style: none
	perspective: 900
	padding: 0
	margin: 0

	.accordion__items
		@extend .flipIn
		
		position: relative
		left: 0
		margin: 0
		
		padding: 0
		padding-top: 8px
		padding-bottom: 8px
		// padding-top: 1rem
		
		border-top: 1px solid $border-color

		&:nth-of-type(1)
			animation-delay: 0.5s

		&:nth-of-type(2)
			animation-delay: 0.75s

		&:nth-of-type(3)
			animation-delay: 1.0s
		&:last-of-type
			padding-bottom: 0
			
		.accordion__subject
			@extend .no-select
			display: block
			margin: 0
			padding: .5rem 0
			cursor: pointer

		.accordion__content
			@extend .transition
			
			z-index: 2
			
			position: relative
			margin-top: 1rem
			margin-bottom: 0
			
			overflow: hidden
			max-height: 800px

			font-size: 1rem
			line-height: $line-height
			letter-spacing: 1px

			opacity: 1
			transform: translate( 0 , 0 )  

		i
			position: absolute
			right: 5px
			margin-top: 1rem
			
			transform: translate( -6px , 0 )

			&:before,
			&:after
				@extend .transition
				content: ""
				position: absolute
				
				width: 3px
				height: 9px
				
				background-color: $action-color

			&:before
				transform: translate( -2px , 0 ) rotate( 45deg )

			&:after
				transform: translate( 2px , 0 ) rotate( -45deg )

		input[type=checkbox]
			z-index: 1
			position: absolute
			
			width: 100%
			height: 100%
			
			cursor: pointer
			opacity: 0

			&:checked
				&~.accordion__content
					margin-top: 0
					max-height: 0
					opacity: 0
					transform: translate( 0 , 50% )

				&~i
					&:before
						transform: translate( 2px , 0 ) rotate( 45deg )

					&:after
						transform: translate( -2px , 0 ) rotate( -45deg )

@keyframes flipdown
	0%
		opacity: 0
		transform-origin: top center
		transform: rotateX(-90deg)
	5%
		opacity: 1
	80%
		transform: rotateX(8deg)
	83%
		transform: rotateX(6deg)
	92%
		transform: rotateX(-3deg)
	100%
		transform-origin: top center
		transform: rotateX(0deg)