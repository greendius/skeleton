.no-select
	-webkit-tap-highlight-color: rgba(0,0,0,0)
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	
.muted
	color: $muted-color
	
// Animation
.transition
	transition: all 0.25s ease-in-out

.flipIn
	animation: flipdown 0.5s ease both
	
